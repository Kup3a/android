<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/s_name_la"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/delimeter"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/s_name" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:inputType="text" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/s_price_la"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/s_name_la"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/m_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/s_price"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="@dimen/ad_i_field_size" />

        <TextView
            android:id="@+id/m_price_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="111111"
            android:textSize="@dimen/ad_i_field_value_size" />

        <TextView
            android:id="@+id/m_price_for"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/s_for"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="@dimen/ad_i_field_size" />

        <Spinner
            android:id="@+id/m_price_for_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/price_placeholder"
            android:textSize="@dimen/ad_i_field_value_size" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/s_place_la"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/s_price_la"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/s_place" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:inputType="text" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/s_cat_la"
        android:layout_below="@+id/s_place_la"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/s_cat"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="@dimen/ad_i_field_size" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/price_placeholder"
            android:textSize="@dimen/ad_i_field_value_size" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/s_ex_cat_la"
        android:layout_below="@id/s_cat_la"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/s_ex_cat"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="@dimen/ad_i_field_size" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/price_placeholder"
            android:textSize="@dimen/ad_i_field_value_size"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/s_sort_la"
        android:layout_below="@id/s_ex_cat_la"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/s_sort"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="@dimen/ad_i_field_size" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/price_placeholder"
            android:textSize="@dimen/ad_i_field_value_size"/>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/reg_pas_la"
        android:layout_centerInParent="true"
        android:background="@color/colorAccent"
        android:text="@string/s_but" />


</RelativeLayout>